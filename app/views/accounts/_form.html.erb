<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="row" style="width:50%; margin: 0 auto;">
    <div>
      <div class="form-inputs">
        <%= f.input :account_name %>
        <%= f.input :account_number %>
        <%= f.input :branch %>
        <%= f.input :active_status, input_html:{checked: "checked"}, as: :hidden %>
        <%= f.input :del_status, as: :hidden  %>

        <br>
       
      </div>

      <div class="row" style="margin-top:40px;">
        <div>
          <%= link_to 'Back', accounts_path, class:"btn btn-md btn-outline-dark" %>
          <%= f.button :submit, class:"btn btn-md btn-primary"  %>
        </div>
      </div>
    </div>
   
  </div>

<% end %>




