<div style="width: 70%; margin: 0 auto;">


<p id="notice"><%= notice %></p>
<br><br><br>

<h1>Customer Information</h1>

<div class="my-content"> 
    <div class="shadow-box-no-border">
        <hr/>
        <div class="d-flex justify-content-end">
            <!--<button class="btn btn-outline-primary">Download CSV  <i class="fa fa-download"></i></button>
            <button class="btn btn-outline-primary">Search  <i class="fa fa-search"></i></button>-->

            <%= link_to new_gideon_test_path, class:"btn btn-outline-primary float-left" do %>
                <span class="glyphicon glyphicon-plus"></span>
                New Customer
            <% end %>
        </div>
    

        <div class="table-responsive">
        <hr/>
            <table class="table table-striped table-hover">
                <thead class="bg-light">
                  <th>#</th>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Dob</th>
                  <th>Nationality</th>
                  <th>Phone number</th>
                  <th>Email</th>
                  <th>Id type</th>
                <!--<th>Id number</th>
                  <th>Home address</th>
                  <th>Second address</th>
                  <th>Occupation</th>
                  <th>Gender</th>-->  
                  <th colspan="3"></th>
                </thead>

                <tbody>
                <% @gideon_tests.each_with_index do |gideon_test, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= gideon_test.first_name %></td>
                      <td><%= gideon_test.last_name %></td>
                      <td><%= gideon_test.dob %></td>
                      <td><%= gideon_test.nationality %></td>
                      <td><%= gideon_test.phone_number %></td>
                      <td><%= gideon_test.email %></td>
                      <td><%= gideon_test.id_type %></td>
                      <!--<td><%#= gideon_test.id_number %></td>
                      <td><%#= gideon_test.home_address %></td>
                      <td><%#= gideon_test.second_address %></td>
                      <td><%#= gideon_test.occupation %></td>
                      <td><%#= gideon_test.gender %></td>-->
                      <td><%= link_to 'Show', gideon_test, class:"btn btn-outline-dark"  %></td>
                      <td><%= link_to 'Edit', edit_gideon_test_path(gideon_test), class:"btn btn-outline-primary"  %></td>
                      <td><%= link_to 'Destroy', gideon_test, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>












