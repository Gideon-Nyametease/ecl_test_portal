<%#= form_with(model: onesimus_test) do |form| %>

<div>
  <%= simple_form_for @onesimus_test do |f| %>


    <div class="row" style="width:50%; margin: 0 auto;">
      <% if onesimus_test.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(onesimus_test.errors.count, "error") %> prohibited this onesimus_test from being saved:</h2>

          <ul>
            <% onesimus_test.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-sm-6">
        <%= f.input :name_of_insured %>
        <%= f.input :address %>
        <%= f.input :occupation %>
        <%= f.input :telephone %>
        <%= f.input :reg_number %>
        <%= f.input :make %>
        <%= f.input :model %>
        <%= f.input :year_of_make %>
        <%= f.input :business_private %>
        <%= f.input :driver_name %>
        <%= f.input :driver_address %>
        <%= f.input :driver_age %>
        <%= f.input :driver_telephone %>
      </div>
      <div class="col-sm-6">
        <%= f.input :driving_license_no %>
        <%= f.input :licence_class %>
        <%= f.input :date_of_issue, as: :string %>
        <div style="margin: 15px 0">
          <%= f.input :convicted_of_motoring_offence %>
        </div>
        <%= f.input :loss_date, as: :string %>
        <%= f.input :time_of_loss, as: :string %>
        <%= f.input :accident_location %>
        <%= f.input :vehicle_speed %>
        <%= f.input :nature_of_loss %>
        <%= f.input :accident_desc %>
        <%= f.input :report_date, as: :string %>
        <%= f.input :policy_number %>
        <br>
        <!--<input type="file" />-->
        <%= f.file_field :image, id: "avatar-upload" %>
      </div>
        
      <div class="row" style="margin-top:40px;">
        <div>
          <%= link_to 'Back', onesimus_tests_path, class:"btn btn-md btn-outline-dark" %>
   
          <%= f.button :submit, class:"btn btn-md btn-primary"  %>
        </div>
      </div>
      
    </div>

  <% end %>
</div>





<%# end %>
