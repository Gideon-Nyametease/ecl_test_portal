      <tr>
        <td><%= onesimus_test.name_of_insured %></td>
        <td><%= onesimus_test.address %></td>
        <td><%= onesimus_test.occupation %></td>
        <td><%= onesimus_test.telephone %></td>
        <td><%= onesimus_test.reg_number %></td>
        <td><%= onesimus_test.make %></td>
        <td><%= onesimus_test.model %></td>
        <td><%= onesimus_test.year_of_make %></td>
        <td><%= onesimus_test.business_private %></td>
        <td><%= onesimus_test.driver_name %></td>
        <td><%= onesimus_test.driver_address %></td>
        <td><%= onesimus_test.driver_age %></td>
        <td><%= onesimus_test.driver_telephone %></td>
        <td><%= onesimus_test.driving_license_no %></td>
        <td><%= onesimus_test.licence_class %></td>
        <td><%= onesimus_test.date_of_issue %></td>
        <td><%= onesimus_test.convicted_of_motoring_offence %></td>
        <td><%= onesimus_test.loss_date %></td>
        <td><%= onesimus_test.time_of_loss %></td>
        <td><%= onesimus_test.accident_location %></td>
        <td><%= onesimus_test.vehicle_speed %></td>
        <td><%= onesimus_test.nature_of_loss %></td>
        <td><%= onesimus_test.accident_desc %></td>
        <td><%= onesimus_test.report_date %></td>
        <td><%= onesimus_test.policy_number %></td>
        <td><%= link_to 'Show', onesimus_test %></td>
        <td><%= link_to 'Edit', edit_onesimus_test_path(onesimus_test) %></td>
        <td><%= link_to 'Destroy', onesimus_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

