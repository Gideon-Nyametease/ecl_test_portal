<div style="width: 70%; margin: 0 auto;">
  <p id="notice"><%= notice %></p>
  <br><br><br>

  <h1>Policy Management</h1>

  <div class="my-content"> 
    <div class="shadow-box-no-border">
        <hr/>
        <div class="d-flex justify-content-between">
            <div class="left">
              <%#= simple_form_for :filter, html:{autocomplete:'off',id:'filterForm'} do |f| %>
              <%= simple_form_for :filter, url: policies_path, :method =>'get' ,html: { class: 'form-horizontal' } do |f| %>
                <div>
                  <%#= f.text_field :hdp_id, id: "id1"%>
                  <input type="text" name="filter[policy_no]" id="id1" placeholder="Search By Policy No."/>
                  <%= f.submit "Search", class: "btn btn-md btn-secondary",:data => {:disable_with => 'Search'} %>
                </div>
              <% end %>
            </div>

            <%= link_to new_policy_path, class:"btn btn-outline-primary float-left" do %>
                <span class="glyphicon glyphicon-plus"></span>
                Create Policy
            <% end %>  
        </div>
    

        <div class="table-responsive">
        <hr/>
            <table class="table table-striped table-hover">
                <thead class="bg-light">
                  <th>#</th>
                  <th>Policy number</th>
                  <th>Insured name</th>
                  <th>Insured from</th>
                  <th>Insured to</th>
                  <th>Premium due</th>
                  <th>File</th>
                  <th colspan="3"></th>
                </thead>

                <tbody>
                <% @policies.each_with_index do |policy, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= policy.policy_number %></td>
                      <td><%= policy.insured_name %></td>
                      <td><%= policy.insured_from %></td>
                      <td><%= policy.insured_to %></td>
                      <td><%= policy.premium_due %></td>
                      <td>
                        <% if policy.image.attached? %>
                           <!-- <img src="<%#= url_for(policy.image) %>" height="110px" width="100px" alt=" demo instructions" class="tl"> --> 
                            <% ref_var = "https://res-2.cloudinary.com/sanbrafiegroup/image/upload/fl_attachment/#{policy.image.key}.jpg"%>
                            <a href= <%= ref_var %> >Download File</a>
                        <% else %>
                            <p class="text-center">Image not available</p>
                        <% end %>
                      </td>
                      <td><%= link_to 'Show', policy, class:"btn btn-outline-dark"  %></td>
                      <td><%= link_to 'Edit', edit_policy_path(policy), class:"btn btn-outline-primary"  %></td>
                      <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>












