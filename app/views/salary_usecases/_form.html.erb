<%= simple_form_for(@salary_usecase) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div style="width:40%; margin: 0 auto;">
    <div>
      <div class="form-inputs">
        <%= f.input :employee_name %>
        <%= f.input :position %>
        <%= f.input :department %>
        <%= f.input :date_joined %>
        <%= f.input :pay_period %>
        <%= f.input :work_days %>
        <%= f.input :gross_amount %>
        <%= f.input :net_amount %>
        <%= f.input :active_status, input_html:{value:"true"} %>
        <%= f.input :del_status %>
        <%= f.input :processed %>
        <br>
       
      </div>

      <div class="row" style="margin-top:40px;">
        <div>
          <%= link_to 'Back', policies_path, class:"btn btn-md btn-outline-dark" %>
          <%= f.button :submit, class:"btn btn-md btn-primary"  %>
        </div>
      </div>
    </div>
   
  </div>

<% end %>

